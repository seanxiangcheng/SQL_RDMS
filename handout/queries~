// Simple test
SELECT NAME FROM EMP
GO

SELECT NAME,AGE FROM EMP
GO

SELECT NAM  FROM EMP
GO

SELECT NAME FROM EMP WHERE SSN = 401
GO

SELECT NAME FROM EMP WHERE SSNX = 401
GO


// Expression in SELECT test
SELECT 2*SALARY FROM EMP
GO


// Wild card in SELECT test
SELECT * FROM EMP
GO


// Boolean express test
SELECT NAME FROM EMP WHERE SSN = 401
GO

SELECT NAME FROM EMP WHERE SSN = 401 OR SSN = 402
GO

SELECT NAME FROM EMP WHERE (NAME >= 'C' AND AGE > 26) 
GO

SELECT PNUM FROM WO  WHERE (PNUM >= 'p03' AND HOURS = 20) OR PNUM = 'p01'
GO


// Qualified name test
SELECT EMP.NAME FROM EMP WHERE SSN = 401
GO

SELECT EMP.NAME, EMP.AGE FROM EMP WHERE SSN = 401
GO

SELECT EMP.NAM  FROM EMP WHERE SSN = 401
GO

SELECT NAME FROM EMP WHERE EMP.SSN = 401
GO

SELECT NAME FROM EMP WHERE EMP.SSNX = 401
GO


// 2 Rels join
SELECT PNAME FROM PROJ, WO    WHERE PNUM=PNO
GO

SELECT NAME  FROM EMP,  WO    WHERE SSN=SSN            
GO
// Error: SSN ambiguous !!!

SELECT NAME  FROM EMP,  WO    WHERE EMP.SSN=WO.SSN
GO

SELECT SSN   FROM EMP,  WO    WHERE EMP.SSN=WO.SSN     
GO
// Error: SSN ambiguous !!!

SELECT PNAME FROM PROJ, WO    WHERE PNUM=PNO AND HRS < 7
GO

SELECT NAME  FROM EMP,  WO    WHERE EMP.SSN = WO.SSN AND WO.PNUM = 'p02'
GO


// 3 Rels join
SELECT NAME, PNAME FROM EMP, WO, PROJ 
      WHERE EMP.SSN = WO.SSN 
        AND PNUM = PNO
GO

SELECT NAME, PNAME FROM EMP, WO, PROJ 
      WHERE EMP.SSN = WO.SSN 
        AND PNUM = PNO
        AND PNAME = 'Keyboard'
GO


